{% if site.rss.enabled %}<?xml version="1.0"?>
<rss version="2.0">
	<channel>
		<title>{{ site.name }}</title>
		<link>{{ BASE_URL }}</link>
		<description>{{ site.description }}</description>
		<language>en-us</language>
		<pubDate>{{ site.time | date: "%a, %d %b %Y %H:%M:%S %Z" }}</pubDate>
		<lastBuildDate>{{ site.time | date: "%a, %d %b %Y %H:%M:%S %Z" }}</lastBuildDate>
		<docs>http://blogs.law.harvard.edu/tech/rss</docs>
		<generator>http://github.com/thedereck/gh-pages-blog</generator>
      
		{% if site.rss.managingeditor.enabled %}
		<managingEditor>{{ site.rss.managingeditor.managingeditor }}</managingEditor>
		{% endif %}
      
		{% if site.rss.webmaster.enabled %}
		<webMaster>{{ site.rss.webmaster.webmaster }}</webMaster>
		{% endif %}
      
		{% if site.rss.ttl.enabled %}
		<ttl>{{ site.rss.ttl.ttl }}</ttl>
		{% endif %}
      
		{% if site.rss.image.enabled %}
		<image>{{ site.rss.image.image }}</image>
		{% endif %}
      
		{% for p in site.posts %}
		<item>
			<title>{{ p.title }}</title>
			<link>{{ p.url }}</link>
			<description>{{ p.description }}</description>
			<pubDate>{{ p.date | date: "%a, %d %b %Y %H:%M:%S %Z" }}</pubDate>
			<guid>{{ p.id }}</guid>
		</item>
		{% endfor %}

	</channel>
</rss>
{% endif %}